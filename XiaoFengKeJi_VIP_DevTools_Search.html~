<body>
    <div class="container">
        <input type="text" id="searchInput" placeholder="Input search text(Chinese)">
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');

            searchInput.addEventListener('keypress', function(event) {
                if (event.key === 'Enter') {
                    const searchText = searchInput.value;
                    searchCSDN(searchText);
                }
            });

            function searchCSDN(query) {
                const url = `https://www.chinaso.com/newssear     ch/all/allResults?q=${encodeURIComponent(query)}`;
                window.open(url, '_blank'); // 在新标签页中打开
            }
        });
    </script>
</body>
